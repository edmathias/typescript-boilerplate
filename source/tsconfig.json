{
  "compilerOptions": {
    "outDir": "../dist",
    "module": "umd",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true   // allows us to refer to dist instead of source
  },
  "exclude": [
    "source",
    "node_modules",
    "bower_components",
    "dist"
  ]
}